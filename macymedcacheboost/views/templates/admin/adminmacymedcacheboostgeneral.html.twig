<form id="module_form" class="defaultForm form-horizontal" action="{{ app.request.uri }}" method="post" enctype="multipart/form-data">
    <input type="hidden" name="token" value="{{ token }}" />

    <div class="panel">
        <h4>{{ 'General Settings'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</h4>

        <!-- Cache Enabled Toggle -->
        <div class="form-group">
            <label class="control-label col-lg-3">{{ 'Enable CacheBoost'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
            <div class="col-lg-9">
                <span class="switch prestashop-switch fixed-width-lg">
                    <input type="radio" name="CACHEBOOST_ENABLED" id="cache_on" value="1" {% if enabled %}checked="checked"{% endif %} />
                    <label for="cache_on" class="radioCheck">{{ 'Yes'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
                    <input type="radio" name="CACHEBOOST_ENABLED" id="cache_off" value="0" {% if not enabled %}checked="checked"{% endif %} />
                    <label for="cache_off" class="radioCheck">{{ 'No'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
                    <a class="slide-button btn"></a>
                </span>
                <p class="help-block">{{ 'Globally enable or disable the CacheBoost module.'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</p>
            </div>
        </div>

        <!-- Enable Cache in Dev Mode Toggle -->
        <div class="form-group">
            <label class="control-label col-lg-3">{{ 'Enable Cache in Dev Mode'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
            <div class="col-lg-9">
                <span class="switch prestashop-switch fixed-width-lg">
                    <input type="radio" name="CACHEBOOST_ENABLE_DEV_MODE" id="dev_mode_cache_on" value="1" {% if enable_dev_mode %}checked="checked"{% endif %} />
                    <label for="dev_mode_cache_on" class="radioCheck">{{ 'Yes'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
                    <input type="radio" name="CACHEBOOST_ENABLE_DEV_MODE" id="dev_mode_cache_off" value="0" {% if not enable_dev_mode %}checked="checked"{% endif %} />
                    <label for="dev_mode_cache_off" class="radioCheck">{{ 'No'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
                    <a class="slide-button btn"></a>
                </span>
                <p class="help-block">{{ 'Allow caching even when _PS_MODE_DEV_ is enabled. Use with caution on production.'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</p>
            </div>
        </div>

        <!-- Enable Compression Toggle -->
        <div class="form-group">
            <label class="control-label col-lg-3">{{ 'Enable Cache Compression'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
            <div class="col-lg-9">
                <span class="switch prestashop-switch fixed-width-lg">
                    <input type="radio" name="CACHEBOOST_COMPRESSION_ENABLED" id="compression_on" value="1" {% if compression_enabled %}checked="checked"{% endif %} />
                    <label for="compression_on" class="radioCheck">{{ 'Yes'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
                    <input type="radio" name="CACHEBOOST_COMPRESSION_ENABLED" id="compression_off" value="0" {% if not compression_enabled %}checked="checked"{% endif %} />
                    <label for="compression_off" class="radioCheck">{{ 'No'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
                    <a class="slide-button btn"></a>
                </span>
                <p class="help-block">{{ 'Enable GZIP compression for cached content. Requires zlib extension.'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</p>
            </div>
        </div>

        <!-- Cache AJAX Requests Toggle -->
        <div class="form-group">
            <label class="control-label col-lg-3">{{ 'Cache AJAX Requests'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
            <div class="col-lg-9">
                <span class="switch prestashop-switch fixed-width-lg">
                    <input type="radio" name="CACHEBOOST_CACHE_AJAX" id="cache_ajax_on" value="1" {% if cache_ajax %}checked="checked"{% endif %} />
                    <label for="cache_ajax_on" class="radioCheck">{{ 'Yes'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
                    <input type="radio" name="CACHEBOOST_CACHE_AJAX" id="cache_ajax_off" value="0" {% if not cache_ajax %}checked="checked"{% endif %} />
                    <label for="cache_ajax_off" class="radioCheck">{{ 'No'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
                    <a class="slide-button btn"></a>
                </span>
                <p class="help-block">{{ 'Enable caching for AJAX requests (e.g., from-xhr). This will cache JSON responses.'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</p>
            </div>
        </div>

        <!-- Cache Duration -->
        <div class="form-group">
            <label class="control-label col-lg-3">{{ 'Cache duration (seconds)'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
            <div class="col-lg-9">
                <input type="number" name="CACHEBOOST_DURATION" value="{{ duration }}" class="form-control" />
            </div>
        </div>

        <!-- Exclusions -->
        <div class="form-group">
            <label class="control-label col-lg-3">{{ 'Exclusions (comma-separated regex patterns)'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
            <div class="col-lg-9">
                <input type="text" name="CACHEBOOST_EXCLUDE" value="{{ exclude }}" class="form-control" />
                <p class="help-block">{{ 'Example: cart, order, my-account'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</p>
            </div>
        </div>

        <!-- Purge Age -->
        <div class="form-group">
            <label class="control-label col-lg-3">{{ 'Purge cache older than (seconds, 0 for disabled)'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
            <div class="col-lg-9">
                <input type="number" name="CACHEBOOST_PURGE_AGE" value="{{ purge_age }}" class="form-control" />
                <p class="help-block">{{ 'Automatically delete cache files older than this many seconds. Set to 0 to disable.'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</p>
            </div>
        </div>

        <!-- Purge Size -->
        <div class="form-group">
            <label class="control-label col-lg-3">{{ 'Purge cache if total size exceeds (MB, 0 for disabled)'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
            <div class="col-lg-9">
                <input type="number" name="CACHEBOOST_PURGE_SIZE" value="{{ purge_size }}" class="form-control" />
                <p class="help-block">{{ 'Automatically delete oldest cache files if total cache size exceeds this limit (in Megabytes). Set to 0 to disable.'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</p>
            </div>
        </div>
    </div>

    <!-- Form Footer -->
    <div class="panel-footer">
        <button type="submit" value="1" id="module_form_submit_btn" name="submit_cacheboost_config" class="btn btn-success pull-right">
            <i class="process-icon-save"></i> {{ 'Save'|trans({}, 'Modules.Macymedcacheboost.Admin') }}
        </button>
    </div>
</form>
