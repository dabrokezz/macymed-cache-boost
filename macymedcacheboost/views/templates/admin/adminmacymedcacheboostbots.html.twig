<form id="module_form" class="defaultForm form-horizontal" action="{{ app.request.uri }}" method="post" enctype="multipart/form-data">
    <input type="hidden" name="token" value="{{ token }}" />

    <div class="panel">
        <h4>{{ 'Bot Cache Settings'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</h4>
        <!-- Bot Cache Enabled Toggle -->
        <div class="form-group">
            <label class="control-label col-lg-3">{{ 'Enable Cache for Bots'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
            <div class="col-lg-9">
                <span class="switch prestashop-switch fixed-width-lg">
                    <input type="radio" name="CACHEBOOST_BOT_CACHE_ENABLED" id="bot_cache_on" value="1" {% if bot_cache_enabled %}checked="checked"{% endif %} />
                    <label for="bot_cache_on" class="radioCheck">{{ 'Yes'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
                    <input type="radio" name="CACHEBOOST_BOT_CACHE_ENABLED" id="bot_cache_off" value="0" {% if not bot_cache_enabled %}checked="checked"{% endif %} />
                    <label for="bot_cache_off" class="radioCheck">{{ 'No'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
                    <a class="slide-button btn"></a>
                </span>
                <p class="help-block">{{ 'Serve cached content to known bots (e.g., Googlebot, Lighthouse) to improve SEO scores.'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</p>
            </div>
        </div>

        <!-- Bot User Agents -->
        <div class="form-group">
            <label class="control-label col-lg-3">{{ 'Bot User Agents (comma-separated)'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</label>
            <div class="col-lg-9">
                <input type="text" name="CACHEBOOST_BOT_USER_AGENTS" value="{{ bot_user_agents }}" class="form-control" />
                <p class="help-block">{{ 'List of User-Agent strings to identify bots. Only cache will be served to these bots.'|trans({}, 'Modules.Macymedcacheboost.Admin') }}</p>
            </div>
        </div>
    </div>

    <!-- Form Footer -->
    <div class="panel-footer">
        <button type="submit" value="1" id="module_form_submit_btn" name="submit_cacheboost_config" class="btn btn-success pull-right">
            <i class="process-icon-save"></i> {{ 'Save'|trans({}, 'Modules.Macymedcacheboost.Admin') }}
        </button>
    </div>
</form>
